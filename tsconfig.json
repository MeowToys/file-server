{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "_config/*": ["config/*"],
      "_src/*": ["src/*"]
    },
    "incremental": true
  },
  "exclude": [
    "uploads",
    "node_modules",
    "config"
  ],
  "include": ["src"]
}
